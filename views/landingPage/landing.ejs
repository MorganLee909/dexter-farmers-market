<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Dexter Farmer's Market</title>
        <link rel="icon" href="../shared/images/logo1.jpg">
        <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet"> 
        <link rel="stylesheet" href="./landingPage/landing.css">
    </head>
    <body>
        <img id="backImg" src="./shared/images/dfm.jpg" alt="Dexter Farmers Market">

        <div id="menu">
            <p class="logo">Dexter Farmer's Market</p>

            <div class="links">
                <a href="/#">About us</a>

                <a href="/#">Contact us</a>
            </div>
        </div>

        <div id="header">
            <img id="headerLogo" src="../shared/images/logo1.jpg" alt="Dexter Farmer's Market">

            <div class="headerText">
                <h1>Dexter Farmers Market</h1>

                <h3>445 Corinna Road, Dexter, Maine</h3>
            </div>

            <div id="imgSpacer"></div>
        </div>

        <div id="news">
            <h2>News</h2>

            <div id="notifications">
                <% for(let item of news){ %>
                    <div class="post">
                        <h4><%= item.title %></h4>
                        <p class="date"><%= item.createdAt.toLocaleDateString('en-US') %></p>
                        <% for(let para of item.content){ %>
                            <p class="content"><%= para %></p>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>

        <script>
            window.onload = ()=>{
                let image = document.getElementById("headerLogo");
                let spacer = document.getElementById("imgSpacer");

                spacer.setAttribute("style", `width: ${image.clientWidth}px`);
            }
        </script>
    </body>
</html>